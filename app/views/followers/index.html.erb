<%= render 'users/header' %>

<div class="mt-4">
    <h1 class="text-3xl px-4 font-bold text-blue-500 mb-4">Your followers</h1>

    <ul class="">
    <% @followers.each do |follower| %>
        <li class="mb-4 pb-4 border-b-2 px-4 border-slate-300">
            <div class="font-bold text-xs text-slate-500 mb-2">
                <%= link_to "@" + User.find(follower.followee_id).slug, User.find(follower.followee_id) %> 
            </div>
        </li>
    <% end %>
    </ul>
</div>