<ul class="">
  <% @articles.each do |article| %>
      <li class="mb-4 pb-4 border-b-2 px-4 border-slate-300">
         <header class="font-bold text-xs text-slate-500 mb-2">
          @<%= article.user.slug %>
          </header>
         <p class="mb-3"><%= link_to article.body, article %></p>
         <hr class="mb-3">
         <%= render 'interactions', article: article %>
      </li>
  <% end %>
</ul>